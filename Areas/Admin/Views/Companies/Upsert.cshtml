@model CC.Reads.Models.Company

@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h1 class="mt-5">@(Model.Id !=0 ? "Update" : "Create") Company</h1>

    <h4></h4>
    <hr />
    <style>
        .form-group {
            margin-bottom: 1rem;
        }
    </style>


    <div class="row">
        <div class="col-10">

            <form asp-action="Upsert" style="width: 100%;" enctype="multipart/form-data">
                <div class="row">



                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.Id" />

                    <div class="form-group">
                        <label asp-for="@Model.Name" class="control-label"></label>
                        <input asp-for="@Model.Name" class="form-control" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.StreetAddress" class="control-label"></label>
                        <input asp-for="@Model.StreetAddress" class="form-control" rows="8" />
                        <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.City" class="control-label"></label>
                        <input asp-for="@Model.City" class="form-control" />
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.State" class="control-label"></label>
                        <input asp-for="@Model.State" class="form-control" />
                        <span asp-validation-for="@Model.State" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="@Model.PostalCode" class="control-label"></label>
                        <input asp-for="@Model.PostalCode" class="form-control" />
                        <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.PhoneNumber" class="control-label"></label>
                        <input asp-for="@Model.PhoneNumber" class="form-control" />
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    @if (Model.Id != 0)
                    {
                        <input type="submit" value="Update" class="btn btn-primary" style="width: 150px;" />
                    }
                    else
                    {
                        <input type="submit" value="Create" class="btn btn-primary" style="width: 150px;" />
                    }

                    <a asp-action="Index" class="btn btn-secondary" style="width: 150px; float: left; margin-left: 2rem;">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }


}
