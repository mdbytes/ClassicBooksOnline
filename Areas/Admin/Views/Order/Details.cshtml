@*
Filename:  Details.cshtml
Purpose:   View for displaying details for Order objects
Contains:  Model, ViewData for page title, Layout specification, Html, asp tag helpers, JavaScript
Author:    Martin Dwyer
Created:   2022-08-17
Last Edit: 2022-08-22
By:        Martin Dwyer
*@

@using CC.Reads.Utility
@model CC.Reads.Models.ViewModel.OrderViewModel

<div class="container">
<form method="post">
<input asp-for="OrderHeader.Id" hidden/>
<br/>

<div class="card">
<div class="card-header bg-dark text-light row container" style="margin:0;">
    <div class="d-none d-md-block col-md-6 pb-1">
        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
    </div>
    <div class="col-12 col-md-4 offset-md-2 text-right">
        <a class="btn btn-primary form-control btn-sm" asp-action="Index">Back to Orders</a>
    </div>
</div>
<div class="card-body">
<div class="container rounded p-2">
<div class="row">
<div class="col-12 col-lg-6 pb-4">
<div class="row">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-primary">PickUp Details:</span>
    </h4>
</div>
<div class="row my-1">
    <div class="col-3">Name</div>
    <div class="col-9">

        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.Name" type="text" class="form-control"/>
            <span asp-validation-for="OrderHeader.Name" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.Name" type="text" class="form-control" disabled/>
        }
    </div>
</div>
<div class="row my-1">
    <div class="col-3">Phone</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.PhoneNumber" type="text" class="form-control"/>
            <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.PhoneNumber" type="text" class="form-control" disabled/>
        }

    </div>
</div>
<div class="row my-1">
    <div class="col-3">Address</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.StreetAddress" type="text" class="form-control"/>
            <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.StreetAddress" type="text" class="form-control" disabled/>
        }
    </div>
</div>
<div class="row my-1">
    <div class="col-3">City</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.City" type="text" class="form-control"/>
            <span asp-validation-for="OrderHeader.City" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.City" type="text" class="form-control" disabled/>
        }
    </div>
</div>
<div class="row my-1">
    <div class="col-3">State</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.State" type="text" class="form-control"/>
            <span asp-validation-for="OrderHeader.State" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.State" type="text" class="form-control" disabled/>
        }
    </div>
</div>
<div class="row my-1">
    <div class="col-3">Zip Code</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.PostalCode" type="text" class="form-control"/>
            <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.PostalCode" type="text" class="form-control" disabled/>
        }
    </div>
</div>
<div class="row my-1">
    <div class="col-3">Email</div>
    <div class="col-9">
        <input asp-for="@Model.OrderHeader.ApplicationUser.Email" type="text" class="form-control" readonly/>
    </div>
</div>
<div class="row my-1">
    <div class="col-3">Order Date</div>
    <div class="col-9">
        <input asp-for="@Model.OrderHeader.OrderDate" value="@Model.OrderHeader.OrderDate.ToShortDateString()" type="text" class="form-control" readonly/>
    </div>
</div>
<div class="row my-1">
    <div class="col-3">Carrier</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.Carrier" type="text" class="form-control" id="carrier"/>
            <span asp-validation-for="OrderHeader.Carrier" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.Carrier" type="text" class="form-control" disabled/>
        }
    </div>
</div>
<div class="row my-1">
    <div class="col-3">Tracking</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.TrackingNumber" type="text" class="form-control" id="tracking"/>
            <span asp-validation-for="OrderHeader.TrackingNumber" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.TrackingNumber" type="text" class="form-control" disabled/>
        }
    </div>
</div>
<div class="row my-1">
    <div class="col-3">Shipping Date</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.ShippingDate" value="@Model.OrderHeader.ShippingDate.ToShortDateString()" type="datetime" class="form-control"/>
            <span asp-validation-for="OrderHeader.ShippingDate" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.ShippingDate" value="@Model.OrderHeader.ShippingDate.ToShortDateString()" type="datetime" class="form-control" disabled/>
        }
    </div>
</div>
<div class="row my-1">
    <div class="col-3">Transaction ID</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.Id" type="datetime" class="form-control"/>
            <span asp-validation-for="OrderHeader.Id" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.Id" type="datetime" class="form-control" disabled/>
        }
    </div>
</div>
<div class="row my-1">
    <div class="col-3">Payment Due Date</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.PaymentDueDate" value="@Model.OrderHeader.PaymentDueDate.ToShortDateString()" type="datetime" class="form-control"/>
            <span asp-validation-for="OrderHeader.PaymentDueDate" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.PaymentDueDate" value="@Model.OrderHeader.PaymentDueDate.ToShortDateString()" type="datetime" class="form-control" disabled/>
        }
    </div>
    <div class="col-3">Payment Date</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.PaymentDate" value="@Model.OrderHeader.PaymentDate.ToShortDateString()" type="datetime" class="form-control"/>
            <span asp-validation-for="OrderHeader.PaymentDate" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.PaymentDate" value="@Model.OrderHeader.PaymentDate.ToShortDateString()" type="datetime" class="form-control" disabled/>
        }
    </div>
</div>
<div class="row my-1">
    <div class="col-3">Payment Status</div>
    <div class="col-9">
        @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
        {
            <input asp-for="@Model.OrderHeader.PaymentStatus" type="datetime" class="form-control"/>
            <span asp-validation-for="OrderHeader.PaymentStatus" class="text-danger"/>
        }
        else
        {
            <input asp-for="@Model.OrderHeader.PaymentStatus" type="datetime" class="form-control" disabled/>
        }
    </div>
</div>
<input type="submit" asp-action="UpdateOrderDetails" class="btn btn-warning form-control my-1" value="Update Order Details"/>


</div>
<div class="col-12 col-lg-5 offset-lg-1">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-primary">Order Summary</span>
    </h4>
    <label class="btn btn-outline-primary form-control my-2">Order Status - @Model.OrderHeader.OrderStatus</label>

    <ul class="list-group mb-3">

        @foreach (var orderDetail in Model.OrderDetails)
        {
            <li class="list-group-item d-flex justify-content-between p-2">
                <div class="row container">
                    <div class="col-8">

                        <h6 class="my-0 text-primary">@orderDetail.Product.Title</h6>
                        <small class="text-muted">Price : @orderDetail.Price</small><br/>
                        <small class="text-muted">Quantity : @orderDetail.Count</small>
                    </div>
                    <div class="col-4">
                        <p class="text-success">@((@orderDetail.Count * @orderDetail.Price).ToString("C"))</p>
                    </div>
                </div>
            </li>
        }

        <li class="list-group-item bg-info">
            <div class="row container">
                <div class="col-6">
                    <h5 class="text-white">TOTAL </h5>
                </div>
                <div class="col-6 text-right">
                    <h5 class="text-white">@Model.OrderHeader.OrderTotal.ToString("C")</h5>
                </div>
            </div>
        </li>
    </ul>


    @if (User.IsInRole(StaticConstants.RoleAdmin) || User.IsInRole(StaticConstants.RoleEmployee))
    {
        if (Model.OrderHeader.OrderStatus == StaticConstants.StatusPending)
        {
            <input asp-action="StartProcessing" type="submit" class="btn btn-primary form-control my-1" value="Start Processing"/>
        }
        if (Model.OrderHeader.OrderStatus == StaticConstants.StatusInProcess)
        {
            <input asp-action="ShipOrder" type="submit" onclick="return ValidateInput()" class="btn btn-primary form-control my-1" value="Ship Order"/>
        }
    }

    @if (Model.OrderHeader.PaymentStatus == StaticConstants.PaymentStatusDelayedPayment && Model.OrderHeader.OrderStatus == StaticConstants.StatusShipped)
    {
        <input type="submit" class="btn btn-success form-control my-1" value="Pay Now"/>
    }
    @if (Model.OrderHeader.PaymentStatus != StaticConstants.StatusRefunded || Model.OrderHeader.OrderStatus != StaticConstants.StatusCancelled)
    {
        <input type="submit" asp-action="CancelOrder" class="btn btn-danger form-control my-1" value="Cancel Order"/>
    }
</div>
</div>
</div>
</div>
</div>

</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>


    <script>

        function ValidateInput() {
            if(document.getElementById("tracking").value=="" || document.getElementById("carrier").value=="")
            {
                swal("Oops!", "Carrier and tracking required for shipping.", "error");
                return false;
            }
            return true;
        }

    </script>
}

}