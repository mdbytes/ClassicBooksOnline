@model int

<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="mt-5 text-primary text-center">Order Placed Successfully!</h1>
            Your Order Number is : @Model <br/><br/>
            @* <img src="~/images/lawn_leaf.jpg" width="65%" />*@
        </div>
        <div class="col-12 text-center" style="color:maroon">
            <br/>
            Your order has been placed successfully! <br/><br/>
            <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn btn-primary">View Orders</a> <br/><br/>
            <a asp-controller="Home" asp-action="Index" class="btn btn-success">Continue Shopping</a>
        </div>
    </div>
</div>